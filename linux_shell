打印菜单:
menu(){
    cat <<END
        1.aa
        2.bb
        3.exit
    END
    }
    read num
    
    [ $num -eq 1]&&{
        echo "start install a"
        [ -x /server/a.sh ]|| exit 2
        /bin/sh /server/a.sh
        exit 0
    }
    [ $num -eq 2 ]&&{
        echo "start install a"
        [ -x /server/b.sh ]|| exit 2
        /bin/sh /server/b.sh
        exit 0
    }
    
    [ $num -eq 3 ]&&{
       echo "bye"
        exit 0
    }
    echo "input error"
    exit 1
