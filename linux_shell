#监控web和db的
    #!/bin/bash
    
process_mysql = `ss -lntup|grep mysql |wc -l`
chars = "mysql process is $process_mysql is ok"
for n in 3306 3307 3306
do
[ $process_mysql -lt 3]&&{
/data/$n/mysql start
}


